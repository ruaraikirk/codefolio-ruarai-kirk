---
import Header from '../components/Header.astro';
import Project from '../components/Project.astro';
import Sidebar from '../components/Sidebar.astro';
const projects = [
  {
    title: "Wookieleaks",
    desc: [
      "Wookieleaks is a small web app built with Vite and React using SWAPI via its GraphQL Wrapper"
    ],
    link: "https://github.com/ruaraikirk/wookieleaks",
    tech: ["Vite", "React", "Tailwind", "GraphQL"]
  },
  {
    title: "MotorcycleNewb",
    desc: [
      "A social media platform for beginner motorcycle enthusiasts"
    ],
    link: "https://github.com/ruaraikirk/MotorcycleNewb",
    tech: ["C#", ".NET"]
  },
  {
    title: "Natours",
    desc: [
      "Tour e-commerce web app built with Node.js"
    ],
    link: "https://github.com/ruaraikirk/natours",
    tech: ["Node.js"]
  }
];
---

<!DOCTYPE html>
<html
>
  <Header title="Personal Projects | Sam Bernstein" />
  <body>
    <div class="content">
        <Sidebar selectedItem="personal-projects" />
      <nav class="main">
        <div class="container">
          <div class="back-nav-container">
            <a href="/" class="back-nav-button w-inline-block"
              ><img src="/assets/back.svg" loading="lazy" alt="" class="back-nav-img" />
              <div>Back</div></a
            >
          </div>
          <div class="content-container">
            <h1>Personal Projects</h1>
            <section class="items-container">
                <div class="resouce-items">
                    {projects.map(project => (
                      <Project 
                        title={project.title} 
                        desc={project.desc}
                        link={project.link}
                        tech={project.tech}
                      />
                    ))}
                  </div>
            </section>
          </div>
        </div>
      </nav>
    </div>
    <!--[if lte IE 9]><script src="//cdnjs.cloudflare.com/ajax/libs/placeholders/3.0.2/placeholders.min.js"></script><![endif]-->
  </body>
</html>
